{
  "name": "daggerheart-gm",
  "version": "1.0.0",
  "description": "A GM tool for Daggerheart",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node --env-file=.env server.js",
    "dev": "node --env-file=.env --watch server.js & npm run dev:css & npm run dev:js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --minify",
    "dev:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "build:js": "esbuild src/client/app.jsx --bundle --format=esm --jsx=automatic --external:react --external:react-dom --external:react/jsx-runtime --external:firebase/app --external:firebase/auth --external:lucide-react --outfile=public/app.js",
    "dev:js": "esbuild src/client/app.jsx --bundle --format=esm --jsx=automatic --external:react --external:react-dom --external:react/jsx-runtime --external:firebase/app --external:firebase/auth --external:lucide-react --outfile=public/app.js --watch",
    "fetch:srd": "node scripts/fetch-srd.js",
    "seed:srd": "node --env-file=.env scripts/seed-srd.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "firebase-admin": "^13.7.0",
    "pg": "^8.19.0",
    "puppeteer": "^24.37.5"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "esbuild": "^0.27.3",
    "tailwindcss": "^4.2.1"
  }
}
